GET     /                           controllers.HomeController.index

POST    /newgame                    controllers.HomeController.newGame()

GET     /game                       controllers.HomeController.game()

GET     /play                       controllers.HomeController.play()

POST    /chooseGame                 controllers.HomeController.chooseGame()

GET     /chooseGame                 controllers.HomeController.gameTypes()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
